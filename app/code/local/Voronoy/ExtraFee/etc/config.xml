<config>
    <modules>
        <Voronoy_ExtraFee>
            <version>1.0.4</version>
        </Voronoy_ExtraFee>
    </modules>
    <global>
        <models>
            <voronoy_extrafee>
                <class>Voronoy_ExtraFee_Model</class>
                <resourceModel>voronoy_extrafee_resource</resourceModel>
            </voronoy_extrafee>
            <voronoy_extrafee_resource>
                <class>Voronoy_ExtraFee_Model_Resource</class>
            </voronoy_extrafee_resource>
            <salesrule>
                <rewrite>
                    <validator>Voronoy_ExtraFee_Model_SalesRule_Discount_Validator</validator>
                </rewrite>
            </salesrule>
        </models>
        <blocks>
            <voronoy_extrafee>
                <class>Voronoy_ExtraFee_Block</class>
            </voronoy_extrafee>
        </blocks>
        <helpers>
            <voronoy_extrafee>
                <class>Voronoy_ExtraFee_Helper</class>
            </voronoy_extrafee>
        </helpers>
        <sales>
            <quote>
                <totals>
                    <extra_fee_payment>
                        <class>voronoy_extrafee/quote_address_total_fee_payment</class>
                        <after>subtotal</after>
                        <before>grand_total</before>
                    </extra_fee_payment>
                    <extra_fee_rule>
                        <class>voronoy_extrafee/quote_address_total_fee_rule</class>
                        <after>discount</after>
                        <before>grand_total</before>
                    </extra_fee_rule>
                </totals>
            </quote>
            <order_invoice>
                <totals>
                    <extra_fee_payment>
                        <class>voronoy_extrafee/sales_order_invoice_total_fee_payment</class>
                        <after>subtotal</after>
                    </extra_fee_payment>
                    <extra_fee_rule>
                        <class>voronoy_extrafee/sales_order_invoice_total_fee_rule</class>
                        <after>discount</after>
                    </extra_fee_rule>
                </totals>
            </order_invoice>
        </sales>
        <fieldsets>
            <sales_convert_quote_address>
                <base_extra_fee_payment_amount>
                    <to_order>*</to_order>
                </base_extra_fee_payment_amount>
                <extra_fee_payment_amount>
                    <to_order>*</to_order>
                </extra_fee_payment_amount>
                <base_extra_fee_rule_amount>
                    <to_order>*</to_order>
                </base_extra_fee_rule_amount>
                <extra_fee_rule_amount>
                    <to_order>*</to_order>
                </extra_fee_rule_amount>
                <extra_fee_rule_description>
                    <to_order>*</to_order>
                </extra_fee_rule_description>
            </sales_convert_quote_address>
        </fieldsets>
        <resources>
            <voronoy_extrafee_setup>
                <setup>
                    <module>Voronoy_ExtraFee</module>
                    <class>Mage_Sales_Model_Resource_Setup</class>
                </setup>
            </voronoy_extrafee_setup>
        </resources>
        <events>
            <salesrule_rule_save_before>
                <observers>
                    <voronoy_extrafee>
                        <class>voronoy_extrafee/observer</class>
                        <method>beforeSaveSalesRuleModel</method>
                    </voronoy_extrafee>
                </observers>
            </salesrule_rule_save_before>
            <adminhtml_block_salesrule_actions_prepareform>
                <observers>
                    <voronoy_extrafee>
                        <class>voronoy_extrafee/observer</class>
                        <method>prepareFormSalesRuleEdit</method>
                    </voronoy_extrafee>
                </observers>
            </adminhtml_block_salesrule_actions_prepareform>
        </events>
    </global>
    <frontend>
        <layout>
            <updates>
                <voronoy_extrafee>
                    <file>voronoy_extrafee.xml</file>
                </voronoy_extrafee>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <layout>
            <updates>
                <voronoy_extrafee>
                    <file>voronoy_extrafee.xml</file>
                </voronoy_extrafee>
            </updates>
        </layout>
    </adminhtml>
    <default>
        <extra_fee_settings>
            <extra_fee_payment>
                <active>1</active>
                <label>Payment Extra Fee</label>
                <payment_methods>a:1:{s:18:"_1441609947697_697";a:2:{s:12:"payment_code";s:0:"";s:6:"amount";s:0:"";}}</payment_methods>
            </extra_fee_payment>
            <extra_fee_rule>
                <active>1</active>
                <label>Extra Fee</label>
            </extra_fee_rule>
        </extra_fee_settings>
    </default>
</config>